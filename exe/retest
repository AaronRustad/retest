#!/usr/bin/env ruby

require 'retest'
require 'listen'

puts "Launching Retest..."

command = Retest::Command.for(ARGV.join)

listener = Listen.to('.', Retest::ListenOptions.to_h) do |modified, added, removed|
  if modified.any?
    system("clear") || system("cls")
    command.run(modified.first.strip)
  end
rescue => e
  puts "Something went wrong: #{e.message}"
end

listener.start # not blocking
puts "Ready to refactor! You can make file changes now"
sleep
